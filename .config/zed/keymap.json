[
    {
        "context": "Pane",
        "bindings": {
            "ctrl-1": ["pane::ActivateItem", 0],
            "ctrl-2": ["pane::ActivateItem", 1],
            "ctrl-3": ["pane::ActivateItem", 2],
            "ctrl-4": ["pane::ActivateItem", 3],
            "ctrl-5": ["pane::ActivateItem", 4],
            "ctrl-6": ["pane::ActivateItem", 5],
            "ctrl-7": ["pane::ActivateItem", 6],
            "ctrl-8": ["pane::ActivateItem", 7],
            "ctrl-9": ["pane::ActivateItem", 8],
            "ctrl-0": "pane::ActivateLastItem"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "alt-i": "editor::MoveUp",
            "alt-k": "editor::MoveDown",
            "alt-j": "editor::MoveLeft",
            "alt-l": "editor::MoveRight",

            "ctrl-alt-i": "editor::LineUp",
            "ctrl-alt-k": "editor::LineDown",
            "ctrl-alt-j": "editor::MoveToPreviousWordStart",
            "ctrl-alt-l": "editor::MoveToNextWordEnd",

            "shift-alt-i": "editor::SelectUp",
            "shift-alt-k": "editor::SelectDown",
            "shift-alt-j": "editor::SelectLeft",
            "shift-alt-l": "editor::SelectRight",

            "ctrl-shift-alt-j": "editor::SelectToPreviousWordStart",
            "ctrl-shift-alt-l": "editor::SelectToNextWordEnd",

            "alt-left": "editor::MoveToBeginningOfLine",
            "alt-right": "editor::MoveToEndOfLine",
            "shift-alt-left": "editor::SelectToBeginningOfLine",
            "shift-alt-right": "editor::SelectToEndOfLine"
        }
    }
]
