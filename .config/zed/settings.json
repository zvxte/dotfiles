{
  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Update
  "auto_update": false,
  // Font
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "buffer_font_family": "Input Mono",
  "buffer_font_weight": 300,
  "ui_font_family": "Ubuntu",
  "current_line_highlight": "line",
  // Theme
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "JetBrains New Dark"
  },
  // Save
  "autosave": {
    "after_delay": {
      "milliseconds": 300
    }
  },
  // UI
  "cursor_blink": false,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  // Git
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // Hints
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 300,
    "scroll_debounce_ms": 50
  }
}
